<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<BasicAuthentication async="false" continueOnError="false" enabled="false" name="BA-EncodeClientIdSecret">
    <DisplayName>BA-EncodeClientIdSecret</DisplayName>
    <Operation>Encode</Operation>
    <IgnoreUnresolvedVariables>false</IgnoreUnresolvedVariables>
    <User ref="request.formparam.client_id"/>
    <Password ref="request.formparam.client_secret"/>
    <AssignTo createNew="false">request.header.Authorization</AssignTo>
    <!--Source>request.header.Authorization</Source-->
</BasicAuthentication>